<div id="taglist" class="maintags"></div>

<div class="container">

<aside class="twitter">

</aside>
<div class="articles">
    {{#each article}}
    <div class="article">
        <div class="content">
            <img class="articleImage" src="{{this.imgSrc}}" alt="{{this.title}}">
            <h2 class="articleTitle">{{this.title}}</h2>
            <p class="articleDesc">{{this.description}}</p>
        </div>
        <ul class="interact">
            <li>{{likes.count}}</li>
            <li><a href="/"><i class="fas fa-heart"></i> Like</a></li>
            <li><a href="/"><i class="fas fa-comment"></i> Comment</a></li>
            <li><a href="/">{{comments.number}} comments</a></li>
        </ul>
    </div>
    {{/each}}
</div>

</div>