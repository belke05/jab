<div class="article">

    <div class="content">
        <a href="{{this.link}}"><img class="articleImage" src="{{this.imgUrl}}" alt="{{this.title}}"></a>
        <div class="articleDiv">
        <a href="{{this.link}}">
            <h2 class="articleTitle">{{this.title}}</h2>
        </a>
        <a href="{{this.link}}">
            <p class="articleDesc">{{this.description}}</p>
        </a>
        </div>
    </div>
    <ul class="interact" id="{{this._id}}">
        <button type="button" class="like_btn"><i class="fas fa-heart"></i> {{this.jabs.length}} Jabs</button>
        <button type="button" class="comment_btn"><i class="fas fa-comment"></i> Comment</button>
        <a>{{this.comments}} comments</a>
    </ul>
</div>